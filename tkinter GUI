# Core Packages
import tkinter as tk
from tkinter import *
from tkinter import ttk


# NLP Packages
 
# Structure and Layout
window = Tk()
window.title("NLP PSC")
window.geometry("700x400")
window.config(background='black')

# TAB LAYOUT
tab_control = ttk.Notebook(window)
 
tab1 = ttk.Frame(tab_control)
tab2 = ttk.Frame(tab_control)
tab3 = ttk.Frame(tab_control)

# ADD TABS TO NOTEBOOK
tab_control.add(tab1, text='Retraining')
tab_control.add(tab2, text='Tracker')
tab_control.add(tab3, text='Accuracy level')

#Labels
label1 = Label(tab1, text= 'Subset Retraining',padx=5, pady=5,font="Verdana 10 bold")
label1.grid(column=500, row=1)
S1Lb = Label(tab1, text=" PSC ", fg="yellow", bg="black")
S1Lb.grid(row=6, column=0, pady=10, sticky=W)


label2 = Label(tab2, text= 'How many correction the user made',padx=5, pady=5)
def clickOK():
    global count
    count=count + 1
    label2.configure(text="Edited " + str(count) + " time(s)")
count=0 #TRACKER
label2.grid(column=500, row=1)

label3 = Label(tab3, text= 'Accuracy level',padx=5, pady=5,font="Verdana 10 bold")
label3.grid(column=500, row=1)

tab_control.pack(expand=1, fill='both')

#Entry
Name = StringVar()
NameEn = Entry(tab1, textvariable=Name,width=50)
NameEn.grid(row=6, column=1)

#ADD BUTTON
button=tk.Button(tab1,text="Correct this PSC",command=clickOK)
button.grid(column=500,row=6,padx=10,pady=10)

about_label = Label(window,text="NLP GUI V.0.0.1 \n Team Innovation Geek",pady=5,padx=5)
about_label.pack(fill='both')




window.mainloop()
